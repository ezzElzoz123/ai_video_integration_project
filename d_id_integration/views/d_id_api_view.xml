<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="d_id_form" model="ir.ui.view">
            <field name="name">D-ID API form</field>
            <field name="model">d.id.api</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="ask_deep_seek" type="object" string="Deepseek"/>
                        <button name="ask_gpt" type="object" string="ChatGPT"/>
                        <button name="create_talking_avatar" type="object" string="Generate Video"/>
                        <button name="%(action_report_did_api)d" type="action" class="btn-primary" string="Print D-ID Report"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="character"/>
                        </group>
                        <field name="image_html"/>
                        <group>
                            <field name="question"/>
                            <field name="lyrics"/>
                            <field name="is_created_from_portal" invisible="1"/>
                            <field name="video_id" readonly="1"/>
                            <field name="video_url" readonly="1" widget="url"/>
                        </group>
                        <notebook>
                            <page string="Video Preview" attrs="{'invisible': [('video_url', '=', False)]}">
                                <field name="video_html" widget="html" nolabel="1"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" groups="base.group_user"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="d_id_tree" model="ir.ui.view">
            <field name="name">D-ID API tree</field>
            <field name="model">d.id.api</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="character"/>
                    <field name="question"/>
                    <field name="lyrics"/>
                </tree>
            </field>
        </record>

        <record id="d_id_action" model="ir.actions.act_window">
            <field name="name">D-ID API</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">d.id.api</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>